
@model CitizenShipViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" style="margin-top:10px">
    <a asp-controller="Home" asp-action="GetAllCitizenship">ALl CitizenShip Details</a>
</div>
<h4>Create</h4>
    @if (ViewBag.isSuccess==true)
    {
        <div class="alert alert-success alert-dismissible fade show form-control" role="alert">
            <strong>Congratulations!!</strong> Data Saved Successfully.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
<hr />
<div class="container">
        <div class="row">
            <div class="col-md-4">

                <form asp-action="CreateCitizenship">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CitizenCertificateNo" class="control-label"></label>
                        <input asp-for="CitizenCertificateNo" class="form-control" />
                        <span asp-validation-for="CitizenCertificateNo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BirthPlace" class="control-label"></label>
                        <input asp-for="BirthPlace" class="form-control" />
                        <span asp-validation-for="BirthPlace" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PermanentAddress" class="control-label"></label>
                        <input asp-for="PermanentAddress" class="form-control" />
                        <span asp-validation-for="PermanentAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CitizenShipIssuedAddress" class="control-label"></label>
                        <input asp-for="CitizenShipIssuedAddress" class="form-control" />
                        <span asp-validation-for="CitizenShipIssuedAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CitizenShipIssuedDate" class="control-label"></label>
                        <input asp-for="CitizenShipIssuedDate" class="form-control" type="date" />
                        <span asp-validation-for="CitizenShipIssuedDate" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="submit" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
</div>
