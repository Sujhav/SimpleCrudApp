@model List<CitizenShipViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    .edit{
        text-decoration: none;
        padding: 11px 20px;
        position: relative;
        top: 7px;
        color:black;
    }

</style>
<div class="container" style="margin-top:10px">
    <a asp-controller="Home" asp-action="CreateCitizenship">Create a new record</a>
</div>
<br />
<h4>List of all Records</h4>
 

    <div class="container">
     
        <h2>CitizenShip Details</h2>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Citizen Certificate No</th>
                    <th>Full Name</th>
                    <th>Birth Place</th>
                    <th>Permanent Address</th>
                    <th>CitizenShip Issued Address</th>
                    <th>CitizenShip Issued Date</th>
                    <th>DateofBirth</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                
                @foreach (var details in Model)
                {
                    <tr>
                        <td>@details.CitizenCertificateNo</td>
                        <td>@details.FullName</td>
                        <td>@details.BirthPlace</td>
                        <td>@details.PermanentAddress</td>
                        <td>@details.CitizenShipIssuedAddress</td>
                        <td>@details.CitizenShipIssuedDate</td>
                        <td>@details.DateofBirth</td>
                        <td>
                            <form method="post" asp-action="Delete" asp-controller="Home" asp-route-id="@details.Id">

                                <button class="btn" type="submit" style="color:black">Delete</button>
                        
                             </form>

                        </td>
                        <td>
                            <a asp-action="UpdateCitizenDetails" asp-controller="Home" asp-route-Id="@details.Id"
                            class="edit">Edit</a>
                            
                        </td>
                        
                      
                    </tr>

                   
                }
            </tbody>
        </table>
    </div>



